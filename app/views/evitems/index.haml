
= render 'events/list'

.main
  = render 'events/header', :selected_item => 'evitems'


  .section
    = render "list_evitems"

    - if params[:mode] == 'edit'
      .section
        = render "form"
        
  .lien_bas_de_page
    - unless params[:mode] == 'edit'
      >
      = link_to 'Manage invoiced event items', event_evitems_path(params[:event_id], :mode => "edit")
    - else
      >
      = link_to 'Back', event_evitems_path
      - if params[:evitem_id].present?
        |
        = link_to 'Clear (create new)', event_evitems_path(:mode => 'edit') 