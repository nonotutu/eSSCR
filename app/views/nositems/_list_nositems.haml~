- mode = params[:mode]
- table = generate_table_nositems(@invoice.id)

%table.invoiced_items
  %tr
    %th Name
    %th Qty
    %th Price
    %th Total
  - table.each do |ligne|
    %tr
      %td= ligne[2]
      %td= ligne[3]
      %td= ligne[4]
      %td= ligne[5]
      - if ligne[0] == 1 && mode == 'edit'
        %td.taille_min= link_to '↑↑', :action => :move_up, :id=>ligne[1]
        %td.taille_min= link_to '↓↓', :action => :move_down, :id=>ligne[1]
        %td.taille_min
          %font{:style => "font-family: HeydingsIconsRegular"}
            = link_to 'w', invoice_nositems_path(params[:invoice_id], { :mode => "edit", :nositem_id => ligne[1] } )
        %td.taille_min= link_to "×", { :action => :destroy, :id => ligne[1] }, :method => :delete