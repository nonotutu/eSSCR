%table.formulaire
  = simple_form_for ([@invoice, @nositem ||= Nositem.new]) do |f|
    %tr
      %th
        Name :
      %td{ :colspan => '5' }
        = f.input :name, :label => false
    %tr
      %th
        Quantity :
      %td
        = f.input :qty, :label => false, :input_html => {:size => 2} 
      %th
        Kind :
      %td
        = f.input :kind,
            :as => :radio,
            :collection => [['â‚¬', 1], ['%', 2]],
            :label_method => :first,
            :value_method => :last,
            :label => false
      %th
        Price :
      %td
        = f.input :price, :label => false, :input_html => {:size => 2} 
    %tr
      %td
      %td{ :colspan => '5', :align => :right }
        = f.button :submit    