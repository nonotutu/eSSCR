
.main
  = render "tools/header", :selected_item => "customers"
  
  .section

    %table.ligne
      %tr
        %th Nom
        %th Adresse
        %th ? e(s)
        %th ? ep
        %th ? enp
      - Customer.all.each do |cust|
        %tr
          %td
            = cust.data.lines.first
          %td
            - cust.data.lines.each do |ligne|
              = ligne
              %br
          %td
            = cust.nb_evt_srv
            = link_to "⊙", events_path(:params => { :client => cust.id, :reset => 'reset' })
          %td
            = cust.nb_evt_paid
          %td
            = cust.nb_evt_notpaid
              
          %td.manage_link
            = link_to "⊙", customer_path(cust.id)

    %hr.intrasection_top_liens
            
    .liens_intrasection
      = link_to "✯ new", new_customer_path
              
    %hr.intrasection_bottom_liens

        
  
