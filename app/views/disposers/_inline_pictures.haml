- unless params[:icon_size]
  - params[:icon_size] = 1

- unless @service.disposers.empty?
  - @service.disposers.each do |dispo|
    - selection = (@disposer && @disposer.id==dispo.id)?"background:lightred; border: 2px dotted red":nil
    - dispo.quantity.times do
      - if dispo.crentite
        = image_tag("/dispositifs/code_image_s#{params[:icon_size]}/#{dispo.dispositif.id}", :alt => "☒", :title => dispo.crentite.number + " → " + dispo.dispositif.name, :style => "border-top: 4px dotted orange")
      - else
        = image_tag("/dispositifs/code_image_s#{params[:icon_size]}/#{dispo.dispositif.id}", :alt => "☒", :title => dispo.dispositif.name, :style => selection)
- else
  %i ─ aucun dispositif ─