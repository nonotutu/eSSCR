
= render 'events/list'

.main
  = render 'events/header', :selected_item => 'services'
  = render 'services/header', :selected_item => 'disposers'

  .section
    = render "disposers/list"
    %hr.intrasection
    = render "disposers/inline_pictures", :params => { :icon_size => 4 }
    %hr.intrasection

    - if params[:mode] == 'edit'
      = render "disposers/form"
  
  .lien_bas_de_page
    - unless params[:mode] == 'edit'
      >
      = link_to "Manage dispositifs", event_service_disposers_path(:mode =>'edit')
    - else
      >
      = link_to "Back", event_service_disposers_path
      - if params[:disposer_id].present?
        |
        = link_to 'Clear (create new)', event_service_disposers_path(:mode => 'edit')