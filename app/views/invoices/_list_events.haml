%table
  %tr
    %th Name
    %th Cat
    %th Services
    - if params[:mode] == 'edit'
      %th
    %th
    - @invoice.events.each do |event|
      %tr
        %td= event.name
        %td= event.category.short_name
        %td= event.services.count
        - if params[:mode] == 'edit'
          %td= link_to "remove", :controller => :events, :action => :remove_from_invoice, :id => event.id
        %td= link_to 'go', event_path(event)