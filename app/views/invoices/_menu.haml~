.menu
  %ul
    %li
      = link_to "All invoices", invoices_path

    %li
      - active = selected_item == 'show' ? :active : nil
      = link_to "Data", invoice_path(@invoice.id), :class => active

    %li
      - active = selected_item == 'overview' ? :active : nil
      = link_to "Overview", invoice_overview_path(@invoice.id), :class => active

    %li
      - active = selected_item == 'events' ? :active : nil
      = link_to "Events(#{@invoice.events.count})", invoice_events_path(@invoice.id), :class => active
      
    %li
      - active = selected_item == 'nonsscrs' ? :active : nil
      = link_to "Non-SSCR(#{@invoice.nonsscrs.count})", invoice_nonsscrs_path(@invoice.id), :class => active