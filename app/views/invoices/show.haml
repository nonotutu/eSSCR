
= render 'invoices/list'

.main
  = render 'invoices/header', :selected_item => 'show'

  .section
    %dl
      %dt Customer_data :
      %dd
        - if @invoice.customer_data != nil
          - @invoice.customer_data.lines.each do |line|
            = line
            %br
        - else
          %i no client
    %dl
      %dt Sent at :
      %dd= @invoice.sent_at ? @invoice.sent_at : 'not filled yet'

  .lien_bas_de_page
    >
    = link_to "Generate PDF", invoice_generate_pdf_path(@invoice)
    |
    = link_to "Edit", edit_invoice_path
    |
    = link_to "Destroy", { :action => :destroy, :id => @invoice.id }, :method => :delete