
.main
  = render 'tools/header', :selected_item => 'templitems'
  
  .section

    %table.ligne
      %tr
        %th Position
        %th Dénomination
        %th Montant
      - Templitem.order(:pos).all.each do |item|
        %tr
          %td.mono_droite
            = item.pos
          %td
            = item.name
          %td.mono_droite
            - if item.kind == 1
              = to_euro(item.price)
            - elsif item.kind == 2
              = to_percent(item.price)
          %td.taille_min
            = link_to "show", templitem_path(item.id)
      
    %hr.intrasection
    
    .lien_bas_de_page
      ➤
      = link_to 'New', new_templitem_path
        
  