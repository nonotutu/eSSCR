.main
  = render "tools/header", :selected_item => "templitems"
  
  .section
    .dl_deux_colonnes_base
      %dl
        %dt Position :
        %dd= @templitem.pos
      %dl
        %dt Dénomination :
        %dd= @templitem.name
      %dl
        %dt Type :
        %dd= @templitem.kind_to_long_s
      %dl
        %dt Montant :
        %dd= @templitem.price

    %hr.intrasection_top_liens
  
    .liens_intrasection
      = link_to "⇇ back", templitems_path
      |
      = link_to "⊚ edit", edit_templitem_path(@templitem.id)
      |
      = link_to "⊗ delete", templitem_path(@templitem.id), :method => :delete
      
    %hr.intrasection_bottom_liens