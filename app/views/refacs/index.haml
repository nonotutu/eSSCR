
= render 'events/list'

.main
  = render 'events/header', :selected_item => 'refacs'

  .section
    
    = render "table"
    
    - if params[:mode] == 'edit'
      = render "form"
    
  .lien_bas_de_page
    - unless params[:mode] == 'edit'
      >
      = link_to 'Manage refacs', event_refacs_path(:mode => "edit")
    - else
      >
      = link_to 'Back', event_refacs_path
      - if params[:refac_id].present?
        |
        = link_to 'Clear (create new)', event_refacs_path(:mode => 'edit') 