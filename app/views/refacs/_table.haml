- total_facture = calcul_prix_event(@event.id)

- unless @event.refacs.empty?

  %table.ligne
    %tr
      %th Entité
      %th %
      %th Montant
    - @event.refacs.each do |refac|
      %tr
        %td
          = refac.crentite.name
        - if refac.kind == 1
          %td
          %td.mono_droite
            = to_euro(refac.price)
        -elsif refac.kind == 2
          %td.mono_droite
            = to_percent(refac.price)
          %td.mono_droite
            = to_euro(total_facture * refac.price / 100.0)
        
        - if params[:mode] == 'edit'
          %td.taille_min= link_to 'edit', event_refacs_path( { :mode => "edit", :refac_id => refac.id } )
          %td.taille_min= link_to 'remove', { :action => :destroy, :id => refac.id }, :method => :delete

- else
  %i ─ aucune refacturation ─