= render 'events/list'

.main
  = render 'events/header', :selected_item => 'overview'

  .section

    -#
      %table.white
      %tr
        %th Client :
        %th Invoice :
        %th Prix :
        %th Prix sur facture :
      %tr
        %td
          - if @event.customer
            = @event.customer.data.lines.first
          - else
            %i no client
        %td
          - if @event.invoice
            = @event.invoice.number
          - else
            %i not invoiced
        %td
          = to_euro(calcul_prix_event(@event.id))
        %td
          = to_euro(calcul_prix_event_included(@event.id))

    = render "data_short"
    
    - @event.services.order(:starts_at).each do |service|
      = render "/table_titre_intrasection", :params => { :titre => service.to_s }
      - (service.volness ||= 0).times do
        %img{:src => "/icons/volo_s2.png", :alt => "❖ "}
      &nbsp &nbsp &nbsp
      - @service = service
      = render "disposers/inline_pictures", :params => { :icon_size => 2 }
      = render "servolos/graph"