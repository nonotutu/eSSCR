= render 'events/list'

.main
  = render 'events/header', :selected_item => 'overview'
  
  .section
    %dl
      %dt Invoice :
      %dd
        - if @event.invoice
          = @event.invoice.number
        - else
          %i not invoiced
    %dl
      %dt Prix :
      %dd= to_euro(calcul_prix_event(@event.id))
    %dl
      %dt Prix sur facture:
      %dd= to_euro(calcul_prix_event_included(@event.id))
        

  .section
    - @event.services.order(:starts_at).each do |service|
      .info
        %h6
          = service.to_s
          â€§
        %h6{ :style => "color: black; font-weight: normal" }
          = temp = service.disposers_to_inline
          - if temp.blank?
            %i aucun dispositif
        - @service = service
        = render "servolos/graph_volos"
      
