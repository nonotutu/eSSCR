
= render 'events/list'

.contenu
  = render 'header', :selected_item => 'show'

  .infos
    .p{:class => :h}
      Category:
    .p{:class => :d}
      = @event.category.name
      %br/
    .p{:class => :h}
      Name:
    .p{:class => :d}
      = @event.name
      %br/
    .p{:class => :h}
      Client:
    .p{:class => :d}
      - if @event.customer != nil
        - @event.customer.data.lines.each do |line|
          = line
          %br/
      - else
        %i no client
      %br/
  
  .lien_bas_de_page
    = link_to "> Edit", edit_event_path
    |
    = link_to "> Destroy", { :action => :destroy, :id => @event.id }, :method => :delete