.menu
  %ul
    -#
      %li
        = link_to 'All events', events_path

    %li    
      -# active = controller_name == 'events' && ( action_name == 'show' || action_name == 'edit' ) ? :active : nil
      - active = selected_item == 'show' ? :active : nil
      = link_to 'Event data', event_path(@event), :class => active

    %li
      -# active = controller_name == 'events' && action_name == 'overview' ? :active : nil
      - active = selected_item == 'overview' ? :active : nil
      = link_to 'Overview', event_overview_path(@event), :class => active
    
    =# nesté
    %li
      -# active = controller_name == 'evitems' ? :active : nil
      - active = selected_item == 'evitems' ? :active : nil
      = link_to "Invoiced event items(#{@event.evitems.count})", event_evitems_path(@event), :class => active

    %li
      - active = selected_item == 'fullitem' ? :active : nil
      = link_to "All invoiced items", event_fullitem_path(@event), :class => active

    %li
      - active = selected_item == 'refacs' ? :active : nil
      = link_to "Refacturation", event_refacs_path(@event), :class => active

      
    -#
      =# nesté
      %li
        -# active = :select == 'services' ? :active : nil
        - active = selected_item == 'services' ? :active : nil
        = link_to "Services(#{@event.services.count})", event_services_path(@event), :class => active