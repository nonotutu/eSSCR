.menu
  %ul

    %li
      - active = selected_item == "overview" ? :active : nil
      = link_to 'événement', event_overview_path(@event), :class => active

    %li    
      - active = selected_item == "show" ? :active : nil
      = link_to 'général', event_path(@event), :class => active
    
    %li
      - active = selected_item == "evitems" ? :active : nil
      = link_to "facturation (#{@event.evitems.count})", event_evitems_path(@event), :class => active

    %li
      - active = selected_item == "refacs" ? :active : nil
      = link_to "refacturation (#{@event.refacs.count})", event_refacs_path(@event), :class => active

    %li
      - active = selected_item == "fullitem" ? :active : nil
      = link_to "aperçu facture", event_fullitem_path(@event), :class => active
